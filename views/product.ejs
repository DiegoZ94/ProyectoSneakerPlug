<%- include ("./templates/_header") %>

<h1 id = "prodTitle">Productos Disponibles</h1>

<div class="container mt-5 mb-5">
  <div class="d-flex justify-content-center row">
      <div class="col-md-10">
          <% for (var i = 0; i <products.length; i++) {    %>

            <div class="row p-2 bg-white border rounded">
                <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image" src="data:image/<%=products[i].img.contentType%>;base64,
					<%=products[i].img.data.toString('base64')%>"></div>
                <div class="col-md-6 mt-1">
                    <h5 id="name"><%= products[i].name  %></h5>
                    <div class="d-flex flex-row">
                        <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
                    </div>
                    <div class="mt-1 mb-1 spec-1"><span id="description"><%= products[i].description  %></span><span class="dot"></span></div>
                    <p class="text-justify text-truncate para mb-0" id="size">Talla: <%= products[i].size  %> MX (cm)<br><br></p>
                    <br>
                    <p class="text-justify text-truncate para mb-0">Día de Publicación: <%= new Intl.DateTimeFormat('es-MX', { year: 'numeric', month: 'long', day: '2-digit'}).format(products[i].datePublished)  %><br><br></p>
                </div>
                <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                    <div class="d-flex flex-row align-items-center">
                        <h4 class="mr-1" id="price">$<%= products[i].price  %></h4>
                    </div>
                    <h6 class="text-success">Free shipping</h6>
                    <div class="d-flex flex-column mt-4">
                        <a class="btn btn-primary btn-sm" type="button" id="submit" href="checkout/<%= products[i]._id%>">Comprar</a>
                    </div>
                </div>
            </div>

          <% }   %>
      </div>
  </div>
</div>

<%- include ("./templates/_footer") %>
